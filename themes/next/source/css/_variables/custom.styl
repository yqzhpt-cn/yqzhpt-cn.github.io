// 标题，修改成你期望的字体族
$font-family-headings = Consolas, STXingKai, Georgia, sans

// 修改成你期望的字体族
$font-family-base = Consolas, STXingKai, "Microsoft YaHei", Verdana, sans-serif

// 代码字体
$code-font-family = Consolas, STXingKai, "Input Mono", "PT Mono", Consolas, Monaco, Menlo, monospace

// 正文字体的大小
$font-size-base = 14px

// 代码字体的大小
$code-font-size = 13px
